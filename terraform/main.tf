terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region  = var.aws_region
  profile = var.aws_profile

  default_tags {
    tags = {
      Project   = "GPU-Genie"
      ManagedBy = "Terraform"
    }
  }
}

locals {
  project_name = "gpu-genie"
}